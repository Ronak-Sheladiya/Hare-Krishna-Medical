# ===== DATABASE CONFIGURATION =====
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0

# ===== SERVER CONFIGURATION =====
# Port for the backend server
PORT=5000
# Environment (development, production, staging)
NODE_ENV=development

# ===== CORS CONFIGURATION =====
# Frontend URL(s) for CORS - use comma-separated for multiple domains
# Development: http://localhost:5173
# Production: https://your-frontend.vercel.app,https://your-frontend-alt.vercel.app
FRONTEND_URL=http://localhost:5173

# ===== JWT CONFIGURATION =====
# Strong secret key for JWT tokens - CHANGE IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Token expiration time
JWT_EXPIRES_IN=7d

# ===== EMAIL CONFIGURATION =====
# Gmail SMTP configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# ===== CLOUDINARY CONFIGURATION =====
# For image uploads and management
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api-key:api-secret@cloud-name

# ===== PAYMENT CONFIGURATION =====
# Razorpay configuration (if using payments)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ===== DEPLOYMENT CONFIGURATION =====
# Your backend URL (for reference and health checks)
BACKEND_URL=https://your-backend.render.com
