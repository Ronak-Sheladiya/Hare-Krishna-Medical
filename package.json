{
  "name": "hare-krishna-medical-app",
  "version": "1.0.0",
  "description": "Full-stack medical store application with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "install:frontend": "cd Frontend && npm install --legacy-peer-deps",
    "install:backend": "cd Backend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev": "cd Frontend && npm run dev",
    "dev:full": "cd Frontend && npm run dev:full",
    "start": "cd Backend && npm start",
    "start:backend": "cd Backend && npm run dev",
    "build": "cd Frontend && npm run build",
    "build:frontend": "cd Frontend && npm run build",
    "test": "cd Frontend && npm test",
    "test:backend": "cd Backend && npm test",
    "deploy:check": "node deploy.js",
    "vercel:deploy": "vercel --prod",
    "production:setup": "npm run install:all && npm run build:frontend && npm run deploy:check",
    "setup:supabase": "node setup-supabase.js"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
